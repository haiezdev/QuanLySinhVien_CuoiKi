@model QuanLySinhVien_CuoiKi.Models.GiaoVien

@{
    ViewData["Title"] = "QUẢN LÝ GIÁO VIÊN";
}

<h1 class="title">XOÁ THÔNG TIN GIAO VIÊN</h1>

<h3>Chắc chắn muốn xoá thông tin về giáo viên này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã giáo viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaGv)
        </dd>
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenGv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            SĐT
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class="col-sm-2">
            Bộ môn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoMon)
        </dd>
        <dt class="col-sm-2">
            Khoa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaKhoaNavigation.MaKhoa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaGv" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> 
        <a class="buttoncuston" asp-action="Index">Trở về</a>
    </form>
</div>
