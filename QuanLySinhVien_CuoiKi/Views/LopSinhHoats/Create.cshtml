@model QuanLySinhVien_CuoiKi.Models.LopSinhHoat

@{
    ViewData["Title"] = "QUẢN LÝ LỚP SINH HOẠT";
}

<h1 class="title">THÊM MỚI LỚP SINH HOẠT</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaLopSh" class="control-label">Mã lớp sinh hoạt</label>
                <input asp-for="MaLopSh" class="form-control" />
                <span asp-validation-for="MaLopSh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLopSh" class="control-label">Tên lớp sinh hoạt</label>
                <input asp-for="TenLopSh" class="form-control" />
                <span asp-validation-for="TenLopSh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKhoa" class="control-label">Mã khoa</label>
                <select asp-for="MaKhoa" class="form-control" asp-items="ViewBag.MaKhoa"></select>
            </div>
            <div class="btsubmit">
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a class="buttoncuston" asp-action="Index">Trở về</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
