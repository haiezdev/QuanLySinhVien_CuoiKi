@model IEnumerable<QuanLySinhVien_CuoiKi.Models.HocPhan>

@{
    ViewData["Title"] = "QUẢN LÝ HỌC PHẦN";
}

<h1 class="title">QUẢN LÝ HỌC PHẦN</h1>
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <p style="margin: 0;">
        <a class="buttoncuston" asp-action="Create">Thêm mới học phần</a>
    </p>
    <div style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 40px;">
        <form style="display: flex; align-items: center;" asp-action="TimKiem">
            <div class="control" style="display: flex; align-items: center;">
                <input name="searchTerm" placeholder="Tìm kiếm..." class="input" style="margin-right: 10px;">
                <button class="button" style="margin-right: 10px;"><i class="mdi mdi-magnify"></i>Tìm kiếm</button>
                <button asp-controller="HocPhans" asp-action="Index" class="button">Làm mới</button>
            </div>
        </form>
        @if (ViewBag.searchTerm != null)
        {
            if (ViewBag.Count == 0)
            {
                <p style="margin: 0; margin-top: 10px;color:red">Không có kết quả phù hợp</p>
            }
            else
            {
                <p style="margin: 0; margin-top: 10px;color:red">Có @ViewBag.Count kết quả tìm kiếm cho từ khoá "@ViewBag.searchTerm"</p>
            }
        }
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Mã học phần
            </th>
            <th>
                Tên học phần
            </th>
            <th>
                Số tín chỉ
            </th>
            <th>
                Mã giáo viên
            </th>
            <th>
                Khoa
            </th>
            <th>Thao tác quản lý</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHocPhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHocPhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoTinChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaGv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKhoaNavigation.MaKhoa)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaHocPhan">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@item.MaHocPhan">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaHocPhan">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
