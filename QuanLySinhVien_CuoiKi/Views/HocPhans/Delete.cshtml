@model QuanLySinhVien_CuoiKi.Models.HocPhan

@{
    ViewData["Title"] = "QUẢN LÝ HỌC PHẦN";
}

<h1 class="title">XOÁ THÔNG TIN HỌC PHẦN</h1>

<h3>Chắc chắn xoá học phần này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên học phần
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenHocPhan)
        </dd>
        <dt class="col-sm-2">
            Số tín chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoTinChi)
        </dd>
        <dt class="col-sm-2">
            Mã giáo viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaGvNavigation.MaGv)
        </dd>
        <dt class="col-sm-2">
            Khoa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaKhoaNavigation.MaKhoa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaHocPhan" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> 
        <a class="buttoncuston" asp-action="Index">Trở về</a>
    </form>
</div>
