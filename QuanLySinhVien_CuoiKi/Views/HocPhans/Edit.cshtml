@model QuanLySinhVien_CuoiKi.Models.HocPhan

@{
    ViewData["Title"] = "QUẢN LÝ HỌC PHẦN";
}

<h1 class="title">CHỈNH SỬA THÔNG TIN HỌC PHẦN</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHocPhan" />
            <div class="form-group">
                <label asp-for="MaHocPhan" class="control-label">Mã học phần</label>
                <input asp-for="MaHocPhan" class="form-control" readonly />
                <span asp-validation-for="MaHocPhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHocPhan" class="control-label">Tên học phần</label>
                <input asp-for="TenHocPhan" class="form-control" />
                <span asp-validation-for="TenHocPhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTinChi" class="control-label">Số tín chỉ</label>
                <input asp-for="SoTinChi" class="form-control" />
                <span asp-validation-for="SoTinChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGv" class="control-label">Mã giáo viên</label>
                <select asp-for="MaGv" class="form-control" asp-items="ViewBag.MaGv"></select>
                <span asp-validation-for="MaGv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKhoa" class="control-label">Khoa</label>
                <select asp-for="MaKhoa" class="form-control" asp-items="ViewBag.MaKhoa"></select>
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
            <div class="btsubmit">
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a class="buttoncuston" asp-action="Index">Trở về</a>
                </div>
            </div>
           
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
