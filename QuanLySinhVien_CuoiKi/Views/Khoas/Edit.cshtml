@model QuanLySinhVien_CuoiKi.Models.Khoa

@{
    ViewData["Title"] = "QUẢN LÝ KHOA";
}

<h1 class="title">CHỈNH SỬA THÔNG TIN KHOA</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKhoa" />
            <div class="form-group">
                <label asp-for="MaKhoa" class="control-label">Mã khoa</label>
                <input asp-for="MaKhoa" class="form-control" readonly />
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKhoa" class="control-label">Tên khoa</label>
                <input asp-for="TenKhoa" class="form-control" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTruong" class="control-label">Trường</label>
                <select asp-for="MaTruong" class="form-control" asp-items="ViewBag.MaTruong"></select>
                <span asp-validation-for="MaTruong" class="text-danger"></span>
            </div>
            <div class="btsubmit">
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a class="buttoncuston" asp-action="Index">Trở về</a>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
